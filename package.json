{
  "name": "zenn-metadata-updater",
  "version": "0.4.0",
  "description": "Update metadata in Zenn markdown file for npm.",
  "main": "lib/index.js",
  "module": "lib/index.js",
  "exports": "./lib/index.js",
  "types": "lib/index.d.ts",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "compile": "tsc",
    "build": "npm-run-all -l -s clean compile",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "eslint": "eslint src/**/*.ts",
    "lint": "npm-run-all -l -p format-check eslint",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm-run-all -l -p lint test -s build",
    "clean": "rimraf lib"
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/korosuke613/zenn-metadata-updater.git"
  },
  "keywords": [
    "node",
    "zenn",
    "yaml"
  ],
  "author": "Futa Hirakoba <korosuke613613@gmail.com> (https://korosuke613.github.io/)",
  "license": "MIT",
  "dependencies": {
    "js-yaml": "^4.0.0",
    "typescript": "5.2.2",
    "yaml-front-matter": "^4.1.1"
  },
  "devDependencies": {
    "@cybozu/eslint-config": "20.0.1",
    "@swc/core": "1.3.93",
    "@swc/jest": "0.2.29",
    "@types/jest": "29.5.5",
    "@types/node": "18.18.6",
    "@types/yaml-front-matter": "4.1.1",
    "eslint": "8.51.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-jest": "27.4.2",
    "jest": "29.7.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.0.3",
    "rimraf": "5.0.5"
  }
}
